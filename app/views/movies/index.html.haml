-#  This file is app/views/movies/index.html.haml
%link(rel="stylesheet" type="text/css" href="assets/stylesheets/application.css")

%h1 All Movies

-# form with checkboxes for movies filtering
= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]","1",@selected_ratings.include?(rating)
  = submit_tag 'Refresh',:id=>"ratings_submit"

%table#movies
  %thead
    %tr
      -# Movies table with css change for sorted column
      %th{:id => "title_header", :class => "#{@title_header_class}"}= link_to 'Movie Title',movies_path(:sort => 'title',:ratings=>@selected_ratings)
      %th Rating
      %th{:id => "release_date_header", :class => "#{@release_date_header_class}"}= link_to 'Release Date',movies_path(:sort => 'release',:ratings=>@selected_ratings)
      %th More Info
  %tbody
    - if @movies then
      - @movies.each do |movie|
        %tr
          %td= movie.title 
          %td= movie.rating
          %td= movie.release_date
          %td= link_to "More about #{movie.title}", movie_path(movie)
    
= link_to 'Add new movie', new_movie_path
